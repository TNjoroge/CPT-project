class Ball extends Level{
  PVector pos;
  Ball() {
    pos = new PVector(300, 300);
  }
  void display() {
    noStroke();
    fill(255, 0, 255);
    ellipse(pos.x, pos.y, 50, 50);
  } 
  void movement() {
    if (move[0]) {
      pos.sub(0, 4);
    } 
    if (move[1]) {
      pos.sub(4, 0);
    } 
    if (move[2]) {
      pos.add(0, 4);
    } 
    if (move[3]) {  
      pos.add(4, 0);
    }
  }

  
  void collision() {
    if (pos.y + 25 >= top.y){
      pos.y = top.y - 25;
    }  
  }
}
